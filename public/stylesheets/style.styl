@font-face { font-family: myriad; src: url('../fonts/myriad-web-pro.ttf'); } 

body
	padding: 0px
	margin: 0px
html,body{ margin:0; padding:0; height:100%; width:100%; }
a
	color: #00B7FF
#main
	background: url('../images/bg.jpg') no-repeat
	background-size: 100% 100%
	//overflow: hidden
	width: 100%
	height: 100%
	color: white
	font-family: "proxima-nova", sans-serif;
	.item
		float: left
		overflow: hidden
		min-width: 400px
		& > div
			margin: 4% 4% 0
			& > div
				margin-bottom: 0.5%
				font-size: 1.2vw
		&.rows4
			height: 25%
		&.rows3
			height: 33.4%
		&.rows2
			height: 50%
		&.rows1
			height: 100%
		&.columns3
			width: 33.3%
			&:nth-child(3n)
				width: 33.4%
		&.columns2
			width: 50%
		&.columns1
			width: 100%
		h3
			font-size: 1.4vw
			margin-bottom: 0.5%
			span:first-child
				margin-right: 30px
		h2
			font-weight: bold
			font-size: 1.6vw
			margin-bottom: 4%
		.location
			font-size: 1vw
			
.clear
	clear: both
.centered
	width: 60%
	margin: 0 auto
	position: relative
	top: 35%
	p
		text-align: center
		padding: 5px 80px
#logo
	position: absolute
	top: 20px
	left: 20px
.your
	text-align: center
	letter-spacing: 4px
	border: 1px solid white
	padding: 30px 50px
	+ p
		margin-top: 50px